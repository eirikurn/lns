{
  "parser": "babel-eslint",
  "extends": ["airbnb/base"],
  "env": {
    "mocha": true
  },
  "rules": {
    "max-len": [2, 120, 2],
    "eqeqeq": [2, "allow-null"],
    "no-cond-assign": [2, "except-parens"],
    "no-param-reassign": [2, {"props": false}],
    "no-use-before-define": [2, "nofunc"],
    "no-confusing-arrow": 0
  }
}
